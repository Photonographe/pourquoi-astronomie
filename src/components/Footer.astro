      width: 45px;
      height: 45px;
      font-size: 1.3rem;
    }
  }
</style>

<script>
  class FooterComponent {
    private backToTopBtn: HTMLElement;
    
    constructor() {
      this.backToTopBtn = document.getElementById('backToTop') as HTMLElement;
      this.setupEventListeners();
    }
    
    private setupEventListeners() {
      // Back to top button
      window.addEventListener('scroll', this.handleScroll.bind(this));
      this.backToTopBtn?.addEventListener('click', this.scrollToTop.bind(this));
      
      // External links tracking
      document.querySelectorAll('a[target="_blank"]').forEach(link => {
        link.addEventListener('click', this.trackExternalClick.bind(this));
      });
    }
    
    private handleScroll() {
      if (window.pageYOffset > 300) {
        this.backToTopBtn?.classList.add('visible');
      } else {
        this.backToTopBtn?.classList.remove('visible');
      }
    }
    
    private scrollToTop() {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
      
      // Track analytics
      if (typeof gtag !== 'undefined') {
        gtag('event', 'scroll_to_top', {
          'event_category': 'navigation'
        });
      }
    }
    
    private trackExternalClick(e: Event) {
      const link = e.target as HTMLAnchorElement;
      const url = link.href;
      
      if (typeof gtag !== 'undefined') {
        gtag('event', 'click', {
          'event_category': 'external_link',
          'event_label': url,
          'transport_type': 'beacon'
        });
      }
    }
  }
  
  // Initialize when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new FooterComponent();
  });
</script>
